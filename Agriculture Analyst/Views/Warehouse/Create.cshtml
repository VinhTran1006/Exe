@model Agriculture_Analyst.Models.Inventory
@{
    ViewData["Title"] = "Tạo Kho mới";
}

<div class="container mt-3 col-md-6">
    <h3>+ Tạo Kho hàng mới</h3>
    <form asp-action="Create" class="card p-4 border-success">
        <div class="mb-3">
            <label class="fw-bold">Tên Kho</label>
            <input asp-for="InvName" class="form-control" placeholder="Ví dụ: Kho Sân Vườn, Kho Nhà Kính..." required />
            <span asp-validation-for="InvName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Tạo kho</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>