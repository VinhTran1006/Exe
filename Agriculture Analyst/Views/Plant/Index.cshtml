@model List<Plant>
<link rel="stylesheet" href="~/css/style/plant.css" />

<h2 class="mb-3">🌱 Danh sách vụ cây trồng</h2>
<div class="mb-3 d-flex gap-2">
    <a asp-action="Create" class="btn btn-primary">
        + Thêm vụ mới
    </a>

    <a asp-controller="Inventory"
       asp-action="Index"
       class="btn btn-success">
        📦 Quản lý kho
    </a>
</div>
<a asp-action="Create" class="btn btn-primary mb-3">+ Thêm vụ mới</a>

<div class="plant-grid">
    @foreach (var p in Model)
    {
        <a asp-controller="Diary"
           asp-action="Index"
           asp-route-plantId="@p.PlantId"
           class="plant-card-link">

            <div class="plant-card">
                <div class="plant-header">
                    <h5>@p.PlantName</h5>
                    <span class="status">@p.Status</span>
                </div>

                <div class="plant-body">
                    <p><strong>Loại:</strong> @p.PlantType</p>
                    <p><strong>Diện tích:</strong> @p.Area m²</p>
                </div>

                <div class="plant-actions">
                    <a asp-action="Edit" asp-route-id="@p.PlantId">✏️ Sửa</a>
                    <a asp-action="Delete" asp-route-id="@p.PlantId">🗑 Xóa</a>
                </div>
            </div>

        </a>
    }
</div>
