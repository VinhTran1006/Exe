@model IEnumerable<Agriculture_Analyst.Models.DTOs.InventoryReportViewModel>

@{
    ViewData["Title"] = "Báo cáo tồn kho";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">📊 Báo cáo Tồn Kho</h2>
        <div>
            <a asp-action="Create" class="btn btn-success me-2">➕ Nhập thêm</a>
            <a asp-action="Export" class="btn btn-warning">📤 Xuất dùng</a>
        </div>
    </div>

    <div class="card p-3 mb-4 bg-light border-0 shadow-sm">
        <form method="get" asp-action="StockReport" class="d-flex align-items-center gap-3">
            <label class="fw-bold text-nowrap">🔍 Xem kho:</label>
            <select name="invId"
                    class="form-select w-auto"
                    asp-items="ViewBag.InventoryList"
                    onchange="this.form.submit()">
                <option value="">-- Tất cả các kho --</option>
            </select>
        </form>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-4">Vật tư</th>
                        <th class="text-center">Đơn vị</th>
                        <th class="text-center text-success">Tổng Nhập</th>
                        <th class="text-center text-danger">Tổng Xuất</th>
                        <th class="text-center fw-bold">Tồn kho</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-dark">@item.ItemName</td>
                            <td class="text-center text-muted">@item.Unit</td>
                            <td class="text-center text-success">+@item.TotalImport</td>
                            <td class="text-center text-danger">-@item.TotalExport</td>
                            <td class="text-center">
                                <span class="badge rounded-pill bg-info fs-6">@item.StockQuantity</span>
                            </td>
                            <td>
                                @if (item.StockQuantity <= 0)
                                {
                                    <span class="badge bg-danger">Hết hàng</span>
                                }
                                else if (item.StockQuantity < 10)
                                {

                                    <span class="badge bg-warning text-dark">Sắp hết</span>
                                }
                                else
                                {

                                    <span class="badge bg-success">Sẵn sàng</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>